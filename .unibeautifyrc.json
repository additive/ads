{
  "SCSS": {
    "beautifiers": ["Prettier"],
    "CSScomb": {
      "prefer_beautifier_config": true
    }
  },
  "JavaScript": {
    "beautifiers": ["ESLint"],
    "ESLint": {
      "prefer_beautifier_config": true
    }
  },
  "PHP": false,
  "Markdown": {
    "beautifiers": ["Prettier"],
    "wrap_line_length": 80,
    "wrap_prose": "always"
  },
  "JSON": {
    "beautifiers": ["Prettier"]
  },
  "HTML": {
    "beautifiers": ["JS-Beautify", "Pretty Diff"],
    "indent_size": "2",
    "indent_style": "space",
    "end_with_newline": true,
    "indent_inner_html": true,
    "indent_scripts": "normal",
    "wrap_attributes": "auto",
    "wrap_attributes_indent_size": "2",
    "newline_before_tags": [
      "main",
      "header",
      "footer",
      "hero",
      "bottom",
      "dock",
      "section",
      "h3",
      "h2",
      "h1"
    ],
    "unformatted": [
      "span",
      "i",
      "b",
      "p",
      "q",
      "s",
      "small",
      "pre",
      "del",
      "option",
      "cite",
      "kbd",
      "mark"
    ]
  }
}
